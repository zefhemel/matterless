{
  "$id": "matterless/schemas/bot.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "team_names": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "username": {
      "type": "string"
    },
    "display_name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "events": {
      "type": "object",
      "propertyNames": {
        "pattern": "^[A-Za-z_][A-Za-z0-9_]*$"
      },
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "team_names",
    "username"
  ]
}