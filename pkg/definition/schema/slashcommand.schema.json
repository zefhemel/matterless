  "type": "object",
  "properties": {
    "team_name": {
      "type": "string"
    },
    "trigger": {
      "type": "string"
    },
    "auto_complete": {
      "type": "boolean"
    },
    "auto_complete_desc": {
      "type": "string"
    },
    "auto_complete_hint": {
      "type": "string"
    },
    "function": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
